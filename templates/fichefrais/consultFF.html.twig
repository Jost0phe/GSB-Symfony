{% extends "base.html.twig" %}

{% block title %}
    Consultation Fiche Frais
{% endblock %}

{% block body %}
   
<a href="/accueil"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>


<h3><center>Consulter <b>Fiches Frais</b></center></h3>
<br><br>
<center>

  <div class="container">
    <div class="well">
      <table class="table">
        <tr>
          <th scope="col">Numéro Fiche Frais</th>
          <th scope="col">Code Identifiant</th>
          <th scope="col">Etat de la fiche</th>
          <th scope="col">Libellé</th>
          <th scope="col">Créée le</th>
          <th scope="col">Nombre de justificatifs</th>
          <th scope="col">Montant total</th>
          <th scope="col">Date de modification</th>
          <th scope="col">Forfait Etape</th>
          <th scope="col">Forfait kilométrique</th>
          <th scope="col">Nuitée hotêl</th>
          <th scope="col">Forfait repas</th>
        </tr>
        {% for line in fiche %}
          <tr>
            {% for data in line %}
              <td>{{ data }}</td>
            {% endfor %}
          </tr>
        {% endfor %}
      </table>


      <br><br><br>
    <form action="consultFF" method="POST">
        <button type="submit" name="date" value="date">Trier Par Date</button>
        <button type="submit" name="libelle" value="libelle">Trier Par Libellé</button>
        <button type="submit" name="montant" value="montant">Trier Par Prix</button>
    </form>

      <h1>Hors <b>Forfait</b></h1><br>
      <table class="table">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Libellé</th>
          <th scope="col">Montant</th>
        </tr>
        {% for ligne in horsforfait %}
          <tr>
            {% for donnees in ligne %}
              <td>{{ donnees }}</td>
            {% endfor %}
          </tr>
        {% endfor %}
      </table>


    </div>
  </div>
</center>
 
{% endblock %}